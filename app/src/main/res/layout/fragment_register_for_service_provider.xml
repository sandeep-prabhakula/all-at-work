<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterForServiceProvider"
    android:background="#089Aff">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Name*" />

            <EditText
                android:id="@+id/newWorkerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Enter the name of the worker"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Age*" />

            <EditText
                android:id="@+id/newWorkerAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="enter the age of the worker "
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck" />


            <TextView
                android:id="@+id/Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Location*" />

            <EditText
                android:id="@+id/newWorkerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Enter the location of the worker"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Mobile Number*" />

            <EditText
                android:id="@+id/newWorkerMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="enter the mobile number of the worker"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/Skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:text="Skills*" />

            <EditText
                android:id="@+id/newWorkerSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:hint="Enter the skills of the worker"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/registerWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        android:text="Register Worker"
        android:textColor="#089Aff"
        android:backgroundTint="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>